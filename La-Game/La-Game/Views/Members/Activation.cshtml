@model La_Game.Models.Member

@{
    ViewBag.Title = "Member Activation";
}

@if (Model.isActive == 1)
{
    <h2>Deactivate Member</h2>

    <h3>Are you sure you want to deactivate this member?</h3>
}
else
{
    <h2>Activate Member</h2>

    <h3>Do you want to reactivate this member?</h3>
}

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Email
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            First Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firstname)
        </dd>

        <dt>
            Last Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastname)
        </dd>

        <dt>
            Admin Rights
        </dt>

        <dd>
            @{
                if (Model.isAdmin == 0)
                {
                    <t>No</t>
                }
                else
                {
                    <t>Yes</t>
                }
            }
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="button" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Index", "Members") + "'");">
                <span class="glyphicon glyphicon-chevron-left"></span> Back
            </button>
            @if (Model.isActive == 1)
            {
                <button type="submit" value="Activation" class="btn btn-default">
                    <span class="glyphicon glyphicon-remove"></span> Deactivate
                </button>
            }
            else
            {
                <button type="submit" value="Activation" class="btn btn-default">
                    <span class="glyphicon glyphicon-plus"></span> Activate
                </button>
            }
        </div>
    }
</div>
