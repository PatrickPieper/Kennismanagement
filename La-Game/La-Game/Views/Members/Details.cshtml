@model La_Game.Models.Member

@{
    ViewBag.Title = "Member Details";
}

<h2>Member Details</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Email
        </dt>
        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>
        <dt>
            Name
        </dt>
        <dd>
            @Html.DisplayFor(model => model.firstname) @Html.DisplayFor(model => model.lastname)
        </dd>
        <dt>
            Admin Rights
        </dt>
        <dd>
            @{
                if (Model.isAdmin == 0)
                {
                    <t>No</t>
                }
                else
                {
                    <t>Yes</t>
                }
            }
        </dd>
    </dl>
</div>
<p>
    <button type="button" class="btn btn-default btn-sm" onclick="@("window.location.href='" + @Url.Action("Index", "Members") + "'");">
        <span class="glyphicon glyphicon-chevron-left"></span> Back to list
    </button>
</p>
