@model IEnumerable<La_Game.Models.Question>

@{
    ViewBag.Title = "AddQuestionToList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script type="text/javascript">
    function Redirect(link) {
        location.href = link;
    }
</script>

<div>
    <h2>Add/Remove Question</h2>

    @using (Html.BeginForm("AddQuestionToList", "QuestionLists", FormMethod.Get))
    {
        <p>
            Question @Html.TextBox("filter")
            <input type="submit" value="Filter" />
        </p>
    }
    <table class="table">
        <tr>
            <th>
                Question
            </th>
            <th>
                Picture
            </th>
            <th>
                Audio
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            var link = Url.Action("Details", "Questions", new { id = item.idQuestion });
            <tr>
                <td onclick="Redirect('@link')">
                    @Html.DisplayFor(modelItem => item.questionText)
                </td>
                <td onclick="Redirect('@link')">
                    @Html.DisplayFor(modelItem => item.picture)
                </td>
                <td onclick="Redirect('@link')">
                    @Html.DisplayFor(modelItem => item.audio)
                </td>
                <td>
                    <button type="button" class="btn btn-default btn-sm">
                        <span class="glyphicon glyphicon-remove"></span> Delete
                    </button>
                </td>
            </tr>
        }

    </table>

</div>
<p>
    <button type="button" class="btn btn-default btn-sm">
        <span class="glyphicon glyphicon-menu-left"></span> Back to list
    </button>
</p>

