@model La_Game.Models.QuestionList

@{
    ViewBag.Title = "Delete Questionlist";
}

<h2>Delete Questionlist</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.questionListName)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.questionListDescription)
        </dd>

        @*<dt>
            @Html.DisplayNameFor(model => model.Lesson.lessonName)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lesson.lessonName)
        </dd>*@

        <dt>
            Active
        </dt>

        <dd>
            @if (Model.isActive == 0 || Model.isActive == null)
            {
                <t>No</t>
            }
            else
            {
                <t>Yes</t>
            }
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

    <div class="form-actions no-color">
        <button type="button" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Index", "QuestionLists") + "'");">
            <span class="glyphicon glyphicon-menu-left"></span> Back
        </button>
        <button type="submit" value="Delete" class="btn btn-default">
            <span class="glyphicon glyphicon-trash"></span> Delete
        </button>
    </div>
    }
</div>
