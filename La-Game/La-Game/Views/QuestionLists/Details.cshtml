@model La_Game.Models.QuestionList

@{
    ViewBag.Title = "Details";
    var questionList = ViewBag.questions;
}

<h2>Details</h2>

<div>
    <h4>QuestionList</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Name
        </dt>

        <dd>
            @Html.DisplayFor(model => model.questionListName)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.questionListDescription)
        </dd>

        <dt>
            Code
        </dt>

        <dd>
            @Html.DisplayFor(model => model.participationCode)
        </dd>

        <dt>
            Active
        </dt>

        <dd>
            @Html.DisplayFor(model => model.isActive)
        </dd>

        <dt>
            Lesson
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Lesson.lessonName)
        </dd>

    </dl>
    <table class="table">
        <tr>
            <th>
                Picture
            </th>
            <th>
                Audio
            </th>
            <th>
                Question Text
            </th>
            <th></th>
        </tr>

        @foreach (var item in questionList)
        {
            <tr>
                <td>
                    @item.picture
                </td>
                <td>
                    @item.audio
                </td>
                <td>
                    @item.questionText
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.idQuestion }) |
                    @Html.ActionLink("Details", "Details", new { id = item.idQuestion }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.idQuestion })
                </td>
            </tr>
        }
    </table>
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.idQuestionList }) |
    @Html.ActionLink("Back to List", "Index")
</p>
