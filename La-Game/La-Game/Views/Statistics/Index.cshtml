@{
    ViewBag.Title = "Index";
}

<h2> Statistics Overview </h2>
<hr />
<div class="col-md-12">
    <div class="col-md-6 col-md-offset-3">
        <div class="row">
            <div class="col-md-4">
                <button type="button" class="btn btn-default btn-sm col-md-12" onclick="@("window.location.href='" + @Url.Action("QuestionStatistics", "Statistics") + "'");">
                    <span class="glyphicon glyphicon-stats"></span> Question Statistics
                </button>
            </div>
            <div class="col-md-4">
                <button type="button" class="btn btn-default btn-sm col-md-12" onclick="@("window.location.href='" + @Url.Action("LessonStatistics", "Statistics") + "'");">
