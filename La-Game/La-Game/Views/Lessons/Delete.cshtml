@model La_Game.Models.Lesson

@{
    ViewBag.Title = "Delete";
}

<h2>Delete Lesson</h2>

<h3>Are you sure you want to delete this?</h3>
<h4>This cannot be undone unless you contact an admin.</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Lesson
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lessonName)
        </dd>

        <dt>
            Description
        </dt>

        <dd>
            @Html.DisplayFor(model => model.description)
        </dd>

        <dt>
            Language
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Language.languageName)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="button" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Index", "Lessons") + "'");">
                <span class="glyphicon glyphicon-menu-left"></span> Back
            </button>
            <button type="submit" value="Delete" class="btn btn-default">
                <span class="glyphicon glyphicon-trash"></span> Delete
            </button>
        </div>
    }
</div>
