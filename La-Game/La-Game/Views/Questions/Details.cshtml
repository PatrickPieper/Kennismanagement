@model La_Game.Models.Question

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>

<div>
    <h4>Question</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.picture)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.picture)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.audio)
        </dt>

        <dd>
            <audio controls controlsList="nodownload">
                <source src="~/Files/@Html.Raw(Model.idQuestion)/Audio/@Html.Raw(Model.audio)" type="audio/mpeg" />
            </audio>
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.questionText)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.questionText)
        </dd>

    </dl>
</div>

<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.idQuestion }) |
    @Html.ActionLink("Back to List", "Index")
</p>
