@model La_Game.Models.Participant

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Delete Participant</h2>

<h3>Are you sure you want to delete this?</h3>
<h4>This cannot be undone unless you contact an admin.</h4>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Firstname
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firstName)
        </dd>

        <dt>
            Lastname
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastName)
        </dd>

        <dt>
            Date of Birth
        </dt>

        <dd>
            @Html.DisplayFor(model => model.birthDate)
        </dd>

        <dt>
            Studentcode
        </dt>

        <dd>
            @Html.DisplayFor(model => model.studentCode)
        </dd>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <button type="button" class="btn btn-default" onclick="@("window.location.href='" + @Url.Action("Index", "Participants") + "'");">
                <span class="glyphicon glyphicon-chevron-left"></span> Back
            </button>
            <button type="submit" value="Delete" class="btn btn-default">
                <span class="glyphicon glyphicon-trash"></span> Delete
            </button>
        </div>
    }
</div>
