@model La_Game.Models.Participant

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Participant Details - @Html.DisplayFor(model => model.firstName) @Html.DisplayFor(model => model.lastName) </h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Firstname
        </dt>

        <dd>
            @Html.DisplayFor(model => model.firstName)
        </dd>

        <dt>
            Lastname
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastName)
        </dd>

        <dt>
            Date of Birth
        </dt>

        <dd>
            @Html.DisplayFor(model => model.birthDate)
        </dd>

        <dt>
            Studentcode
        </dt>

        <dd>
            @Html.DisplayFor(model => model.studentCode)
        </dd>

    </dl>
</div>
<p>
    <button type="button" class="btn btn-default btn-sm" onclick="@("window.location.href='" + @Url.Action("Index", "Participants") + "'");">
        <span class="glyphicon glyphicon-chevron-left"></span> Back
    </button>
    <button type="button" class="btn btn-default btn-sm" onclick="@("window.location.href='" + @Url.Action("Edit", "Participants", new { id = Model.idParticipant }) + "'");">
        <span class="glyphicon glyphicon-wrench"></span> Edit
    </button>
</p>
